{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/posts/:slug",
        "destination": "/posts/:slug/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
